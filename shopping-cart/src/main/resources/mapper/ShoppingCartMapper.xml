<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="indi.fimi.gdpj.shoppingcart.repository.ShoppingCartMapper">

    <resultMap id="shopping-cart-detail-query" type="indi.fimi.gdpj.shoppingcart.domain.ShoppingCartDetail">
        <id property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="foodstuffId" column="foodstuff_id"/>
        <result property="amount" column="amount"/>
    </resultMap>

    <resultMap id="shopping-cart-detail-info-query" type="indi.fimi.gdpj.shoppingcart.domain.ShoppingCartDetailInfo">
        <id property="id" column="id"/>
        <result property="uid" column="uid"/>
        <result property="foodstuffId" column="foodstuff_id"/>
        <result property="amount" column="amount"/>
        <result property="uname" column="uname"/>
        <result property="foodstuffName" column="foodstuff_name"/>
    </resultMap>


    <insert id="addShoppingCartDetail" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO shopping_cart_detail (`uid`,`foodstuff_id`,`amount`) VALUES (#{uid},#{foodstuffId},#{amount})
    </insert>

    <update id="modifyShoppingCartDetailById">
        UPDATE shopping_cart_detail SET uid=#{uid},foodstuff_id=#{foodstuffId},amount=#{amount} WHERE id=#{id}
    </update>

    <select id="getShoppingCartDetailById" resultMap="shopping-cart-detail-query">
        SELECT * FROM shopping_cart_detail WHERE id=#{id}
    </select>

    <select id="getShoppingCartDetailInfoById" resultMap="shopping-cart-detail-info-query">
        SELECT scd.*,gu.uname,fs.name AS foodstuff_name FROM ((shopping_cart_detail scd LEFT JOIN gdpj_user gu ON scd.uid=gu.id) LEFT JOIN foodstuff fs ON scd.foodstuff_id=fs.id) WHERE scd.id=#{id}
    </select>

    <select id="getAllShoppingCartDetailListByUid" resultMap="shopping-cart-detail-query">
        SELECT * FROM shopping_cart_detail WHERE uid=#{uid}
    </select>

    <select id="getAllShoppingCartDetailInfoListByUid" resultMap="shopping-cart-detail-info-query">
        SELECT scd.*,gu.uname,fs.name AS foodstuff_name FROM ((shopping_cart_detail scd LEFT JOIN gdpj_user gu ON scd.uid=gu.id) LEFT JOIN foodstuff fs ON scd.foodstuff_id=fs.id) WHERE scd.uid=#{uid}
    </select>

    <delete id="deleteShoppingCartDetailById">
        DELETE FROM shopping_cart_detail WHERE id=#{id}
    </delete>

    <delete id="deleteAllShoppingCartDetailsByUid">
        DELETE FROM shopping_cart_detail WHERE uid=#{uid}
    </delete>

</mapper>